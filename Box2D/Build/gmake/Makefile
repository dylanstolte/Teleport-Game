# GNU Make solution makefile autogenerated by Premake
# Type "make help" for usage help

ifndef config
  config=debug
endif
export config

PROJECTS := Box2D GLUI HelloWorld Testbed

.PHONY: all clean help $(PROJECTS)

all: $(PROJECTS)

Box2D: 
	@echo "==== Building Box2D ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f Box2D.make

GLUI: 
	@echo "==== Building GLUI ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f GLUI.make

HelloWorld: Box2D
	@echo "==== Building HelloWorld ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f HelloWorld.make

Testbed: Box2D GLUI
	@echo "==== Building Testbed ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f Testbed.make

clean:
	@${MAKE} --no-print-directory -C . -f Box2D.make clean
	@${MAKE} --no-print-directory -C . -f GLUI.make clean
	@${MAKE} --no-print-directory -C . -f HelloWorld.make clean
	@${MAKE} --no-print-directory -C . -f Testbed.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "   debug"
	@echo "   release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   Box2D"
	@echo "   GLUI"
	@echo "   HelloWorld"
	@echo "   Testbed"
	@echo ""
	@echo "For more information, see http://industriousone.com/premake/quick-start"
